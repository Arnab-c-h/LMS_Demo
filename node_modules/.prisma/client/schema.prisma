generator client {
  provider = "prisma-client-js"
  //   output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum LessonType {
  VIDEO
  TEXT
  QUIZ
  FILE
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
}

model User {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique // Still needed for notifications/recovery
  rollNumber String? @unique // Specific to Students
  password   String
  role       Role    @default(STUDENT)
  active     Boolean @default(true)
  photo      String?

  // Who created this user? (For Instructors adding Students)
  createdById  String?
  createdBy    User?   @relation("UserCreator", fields: [createdById], references: [id])
  createdUsers User[]  @relation("UserCreator")

  // Security
  passwordChangedAt    DateTime?
  passwordResetToken   String?
  passwordResetExpires DateTime?

  // Relations
  coursesTeaching Course[]         @relation("InstructorCourses")
  enrollments     Enrollment[]
  quizAttempts    QuizAttempt[]
  progress        LessonProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Course {
  id          String  @id @default(uuid())
  title       String
  slug        String  @unique
  description String?
  thumbnail   String?
  published   Boolean @default(false)

  instructorId String
  instructor   User   @relation("InstructorCourses", fields: [instructorId], references: [id])

  modules     Module[]
  enrollments Enrollment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("courses")
}

model Module {
  id       String   @id @default(uuid())
  title    String
  order    Int
  courseId String
  course   Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  lessons  Lesson[]

  @@map("modules")
}

model Lesson {
  id    String     @id @default(uuid())
  title String
  order Int
  type  LessonType

  videoUrl    String?
  duration    Int?
  textContent String?
  fileUrl     String?

  moduleId String
  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  quiz     Quiz?
  progress LessonProgress[]

  @@map("lessons")
}

model Quiz {
  id       String @id @default(uuid())
  title    String
  passMark Int    @default(70)

  lessonId String @unique
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  questions Question[]
  attempts  QuizAttempt[]

  @@map("quizzes")
}

model Question {
  id     String       @id @default(uuid())
  text   String
  type   QuestionType @default(MULTIPLE_CHOICE)
  points Int          @default(1)

  quizId  String
  quiz    Quiz             @relation(fields: [quizId], references: [id], onDelete: Cascade)
  options QuestionOption[]

  @@map("questions")
}

model QuestionOption {
  id         String   @id @default(uuid())
  text       String
  isCorrect  Boolean  @default(false)
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@map("question_options")
}

model QuizAttempt {
  id          String   @id @default(uuid())
  score       Int
  passed      Boolean
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  completedAt DateTime @default(now())

  @@map("quiz_attempts")
}

model LessonProgress {
  id        String   @id @default(uuid())
  completed Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id])
  updatedAt DateTime @updatedAt

  @@unique([userId, lessonId])
  @@map("lesson_progress")
}

model Enrollment {
  userId   String
  courseId String

  user   User   @relation(fields: [userId], references: [id])
  course Course @relation(fields: [courseId], references: [id])

  // No price, purely access control
  assignedAt DateTime @default(now())

  @@id([userId, courseId])
  @@map("enrollments")
}
